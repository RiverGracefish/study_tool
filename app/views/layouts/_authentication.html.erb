<% if current_user %>
    <li role="presentation" class="dropdown">
      <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-expanded="false" style="color: white;">
        Logged in as <%= current_user.email %><span class="caret"></span>
      </a>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to 'View Profile', user_path(current_user.id) %></li><br/>
        <li><%= link_to 'Logout', logout_path, method: :delete %></li>
      </ul>
    </li>
<% else %>
    <li><%= link_to 'Signup', new_user_path, :class => 'navbar-nav', :style => 'color: white;' %></li>
    <li><%= link_to 'Login', login_path, :class => 'navbar-nav', :style => 'color: white;' %></li>
<% end %>
